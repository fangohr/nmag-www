#!/usr/bin/make -f
# Sample debian/rules file - for GNU Hello.
# Copyright 1994,1995 by Ian Jackson.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself.  (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)
# This file may have to be extensively modified

package = nsim
bindir = debian/tmp/usr/bin
libdir = debian/tmp/usr/lib/$(package)
docdir = debian/tmp/usr/share/doc/$(package)

build:
	touch build

clean:
	rm -f build
	rm -rf *~ debian/tmp debian/*~ debian/files* debian/substvars

binary-indep: build
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch: build
	rm -rf debian/tmp
	install -d debian/tmp/DEBIAN $(docdir)
	#	$(MAKE) INSTALL_PROGRAM="$(INSTALL_PROGRAM)" \
	#		prefix=$$(pwd)/debian/tmp/usr install
	install -d $(bindir)
	install -d $(libdir)
	install -m 755 bin/pyfem3 $(bindir)/pyfem3
	install -m 755 bin/pyfem3 $(bindir)/ipyfem3
	install -m 755 bin/nsim $(bindir)/nsim
	install -m 755 bin/nsim_i $(bindir)/nsim_i
	cp -a interface $(libdir)/interface
	cp -a debian/changelog $(docdir)/changelog
	cd $(docdir) && gzip -9 changelog
	dpkg-gencontrol -isp
	chown -R root:root debian/tmp
	chmod -R u+w,go=rX debian/tmp
	dpkg --build debian/tmp ..

binary: binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean
